<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="author" content="laundry">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.app_name%></title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="uploads/<%=data.app_favicon%>">
    <link href="vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../../vendor/select2.css">
    <link href="css/style.css" rel="stylesheet">
     <!-- Toastr -->
     <link rel="stylesheet" href="vendor/toastr/css/toastr.min.css">

</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-12 mt-4">
					
					<div class="authincation-content ">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
									<div class="text-center mb-3">
										<a href="#"><img src="uploads/<%=data.app_logo%>" width="60px" alt=""></a>
									</div>
                                    <h4 class="text-center mb-4 text-white">Sign up your customer account</h4>
                                    <%  if(multiy){  %>
                                    <p class="text-white">Went to register as Shop ? <a class="text-white" href="/shopregister">Click here</a></p>
                                    <% } %>
                                    <form action="/register" method="post" class="needs-validation">
                                        <div class="row">
                                            <div class="col-xl-6 col-md-6">
                                                <div class="form-group">
                                                    <label class="mb-1 text-white">Name</label>
                                                    <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
                                                </div>
                                                <div class="form-group">
                                                    <label class="mb-1 text-white">Phone Number (Enter Number with Country Code)</label>
                                                    <input type="text" class="form-control" name="number" placeholder="+919896959793" required>
                                                </div>
                                                <div class="form-group">
                                                    <label class="mb-1 text-white">Email</label>
                                                    <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
                                                </div>
                                                <div class="form-group">
                                                    <label class="mb-1 text-white">Tax Number</label>
                                                    <input type="text" class="form-control"name="taxnumber" placeholder="Enter Tax Number" required>
                                                </div>
                                            </div>
                                            <div class="col-xl-6 col-md-6">
                                                <div class="form-group">
                                                    <label class="mb-1 text-white">Address</label>
                                                    <input type="text" class="form-control" name="address" placeholder="Enter Address" required>
                                                </div>
                                                <%  if(multiy){  %>
                                                    <div class="form-group">
                                                        <label class="mb-1 text-white">Select Store</label>
                                                        <select class="default-select form-control wide mb-3" name="store" required>
                                                           <option selected disabled>Select Store</option>
                                                            <% store.forEach(function(data){ %>
                                                                <option value="<%=data.id%>"><%=data.name%></option>
                                                           <% }) %>
                                                        </select>
                                                    </div>
            
                                                   <% } %>
                                                
                                                <div class="form-group">
                                                    <label class="mb-1 text-white">Username</label>
                                                    <input type="text" class="form-control" name="username" placeholder="Enter Username" required>
                                                </div>
                                                <div class="form-group">
                                                    <label class="mb-1 text-white">Password</label>
                                                    <input type="text" class="form-control" name="password" placeholder="Enter Password" required>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        
                                        <div class="text-center mt-4">
                                            <button type="submit" class="btn bg-white text-primary btn-block">Sign me up</button>
                                        </div>
                                    </form>
                                    <div class="new-account mt-3">
                                        <p class="text-white">Already have an account? <a class="text-white" href="/">Login</a></p>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
<!--**********************************
	Scripts
***********************************-->
  <!-- Required vendors -->
  <script src="vendor/global/global.min.js"></script>
  <script src="vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>

  <script src="../../js/select2/select2.full.min.js"></script>
  <script src="../../js/select2/select2-custom.js"></script>

<!-- Toastr -->
<script src="vendor/toastr/js/toastr.min.js"></script>
 <% if(success.length > 0){ %>
    <script>
        (function ($) {
    "use strict"
    console.log('<%=success%>');
      toastr.success('<%=success%>', {
                    timeOut: 500000000,
                    closeButton: !0,
                    debug: !1,
                    newestOnTop: !0,
                    progressBar: !0,
                    positionClass: "toast-top-right",
                    preventDuplicates: !0,
                    onclick: null,
                    showDuration: "300",
                    hideDuration: "1000",
                    extendedTimeOut: "1000",
                    showEasing: "swing",
                    hideEasing: "linear",
                    showMethod: "fadeIn",
                    hideMethod: "fadeOut",
                    tapToDismiss: !1
                })
            })(jQuery)
    </script>
  <% } %>
  <% if(error.length > 0){ %>
    <script>
        (function ($) {
    "use strict"
       

      toastr.error('<%=error%>',{
                    timeOut: 500000000,
                    closeButton: !0,
                    debug: !1,
                    newestOnTop: !0,
                    progressBar: !0,
                    positionClass: "toast-top-right",
                    preventDuplicates: !0,
                    onclick: null,
                    showDuration: "300",
                    hideDuration: "1000",
                    extendedTimeOut: "1000",
                    showEasing: "swing",
                    hideEasing: "linear",
                    showMethod: "fadeIn",
                    hideMethod: "fadeOut",
                    tapToDismiss: !1
                })
            })(jQuery)
    </script>
  <% } %>
<script src="js/custom.min.js"></script>
<script src="js/deznav-init.js"></script>

<script>
function selectRefresh() {
   $(".js-example-basic-single").select2();
}

$(document).ready(function () {
   selectRefresh();
})
</script>

</body>

</html>