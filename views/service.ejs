<!DOCTYPE html>
<html lang="en" class="h-100">


<head>
    <!-- meta and links start -->
    <%- include('templet/meta')-%>

</head>

<body>
    <%- include('templet/preloder_topbar_sidebar',{titel: language.Services })-%>

        <!--********** Content body start **********-->

        <div class="content-body">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card ">
                            <div class="card-header">
                                <div>
                                    <h3 class="card-title"><%= language.Services %> </h3>
                                </div>
                                <div>
                                    <a href="/services/csv_file" class="btn btn-rounded btn-primary mx-3"><%= language.Bulk_Upload_Services %></a>
                                    <a href="/services/addservice"><button class="btn btn-rounded btn-primary  <%= accessdata.roll.service.includes('write') ?'':'d-none' %>"><span class="btn-icon-start text-primary"><i
                                        class="fa fa-plus color-info"></i></span><%= language.Add_New_Services %>  </button></a> 
                                </div>
                            </div>
                            <div class="card-body ">
                                <div class="table-responsive">
                                    <table id="example3" class="display table-responsive-lg">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th><%= language.Service_Name %> </th>
                                                <th class="text-center"><%= language.Service_Type %> </th>
                                                <th class="<%= ismulty ? '': 'd-none' %>"><%= language.Store_Name %>  </th>
                                                <th><%= language.Status %> </th>
                                                <th class="<%= accessdata.roll.service.includes('edit') || accessdata.roll.service.includes('delete') ?'':'d-none' %>"><%= language.Action %> </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% servicesdata.forEach(function(data, i){ %>
                                                <tr>
                                                    <td> <%= i + 1 %>  </td>
                                                    <td> <img class=" img-fluid" width="60" height="60" src="../uploads/<%=data.image %>" alt="image"> <span class="m-3"> <%=data.name %> </span></td>
                                                    <td class="text-center"> <% var x=data.serviceType.split(',') %>
                                                        <% x.forEach(function(y, i){ %>
                                                        <span class="badge badge-dark m-1"><%= y %></span> 
                                                        <% }) %>
                                                    </td>
                                                    <td class="<%= ismulty ? '': 'd-none' %>"><%=data.store %></td>
                                                    <td>
                                                        <%if( data.status == 0){ %>
                                                            <span class="badge light badge-success ">Active</span>
                                                        <% }else{ %>
                                                            <span class="badge light badge-warning">Deactive</span>
                                                        <% } %> 
                                                        
                                                        
                                                    </td>
                                                    <td>
                                                        <a href="/services/updateService/<%= data.id %>" class="btn btn-primary shadow sharp me-1 <%= accessdata.roll.service.includes('edit') ?'':'d-none' %>">
                                                            <i class="fas fa-pencil-alt"></i></a>
    
                                                        <a href="/services/deletservices/<%= data.id %>" class="btn btn-danger shadow sharp me-1 <%= accessdata.roll.service.includes('delete') ?'':'d-none' %>" id="delete">
                                                            <i class="fa fa-trash"></i></a>
                                                    </td>
                                                </tr>
                                           <% }) %>
                                            

                                        </tbody>
                                    </table>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <!--********** Content body end **********-->

        
        </div>
        <!--**********************************
            Footer start
        ***********************************-->
        <div class="footer">
            <div class="copyright">
                <p><%= language.Copyright %> Â© <%= language.Designed %> &amp; <%= language.Developed_by %> <a href="#" target="_blank">KMS</a> 2023</p>
            </div>
        </div>
        <!--**********************************
            Footer end
        ***********************************-->

        </div>

        <!--********** Main wrapper end **********-->
        <%- include('templet/script')-%>

</body>


</html>