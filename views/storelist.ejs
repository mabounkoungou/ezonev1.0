<!DOCTYPE html>
<html lang="en" class="h-100">


<head>
    <!-- meta and links start -->
    <%- include('templet/meta')-%>
    


</head>

<body>
    <%- include('templet/preloder_topbar_sidebar',{titel: language.Store_List })-%>

        <!--********** Content body start **********-->

        <div class="content-body">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card ">
                            <div class="card-header justify-content-end">
                                <a href="/tool/addshop" class="btn btn-rounded btn-primary"><span class="btn-icon-start text-primary">
                                        <i class="fa fa-plus color-info"></i></span><%= language.Add_New_Store %> </a>
                            </div>

                            <div class="card-body">

                                <!----- shop table ----->

                                <div class="shop_table">

                                    <h3><%= language.Shop_List_Table %> </h3>

                                    <div class="table-responsive">
                                            <table id="example2" class="display table-responsive-md">
                                                <thead >
                                                    <tr>
                                                        <th>#</th>
                                                        <th><%= language.Shop_Name %> </th>
                                                        <th><%= language.Store_ID %></th>
                                                        <th><%= language.Status %> </th>
                                                        <th><%= language.Action %> </th>
                                                    </tr>
                                                </thead>
                                                <tbody id="tb_row">
                                                    <% storeList.forEach(function(data, i){ %>
                                                        <tr>
                                                            <td><%= i + 1 %></td>
                                                            <td><%= data.name%></td>
                                                            <td><%= data.id%></td>
                                                            <td> <% if(data.status == 1){ %>
                                                                        <span class="badge light badge-secondary">Approved</span> 
                                                                <% }else if(data.status == 0){ %>
                                                                        <span class="badge light badge-danger">Pending</span> 
                                                                <% }else { %>
                                                                    <span class="badge light badge-danger">Reject</span> 
                                                                <% } %>
                                                            </td>   
                                                            <td>
                                                                <a href="/tool/approvedshop/<%= data.id %>" class="btn btn-primary shadow btn-sx sharp me-1"
                                                                    id="action">
                                                                    <i class="fas fa-pencil-alt"></i></a>
    
                                                                <!-- <a href="#" class="btn btn-danger shadow sharp me-1"
                                                                    id="delete">
                                                                    <i class="fa fa-trash"></i></a> -->
                                                            </td>
                                                        </tr>
                                                   <% }) %>
                                                </tbody>
                                            </table>
                                       
                                    </div>
                                </div>

                                <!----- end shop table ----->
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <!--********** Content body end **********-->

        </div>
        <!--**********************************
            Footer start
        ***********************************-->
        <div class="footer">
            <div class="copyright">
                <p><%= language.Copyright %> Â© <%= language.Designed %> &amp; <%= language.Developed_by %> <a href="#" target="_blank">KMS</a> 2023</p>
            </div>
        </div>
        <!--**********************************
            Footer end
        ***********************************-->

        </div>

        <!--********** Main wrapper end **********-->
        <%- include('templet/script')-%>
</body>


</html>