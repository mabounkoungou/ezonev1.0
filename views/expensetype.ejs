<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
     <!-- meta and links start -->
     <%- include('templet/meta')-%> 
    
</head>
<body>
    <%- include('templet/preloder_topbar_sidebar',{titel: language.Expence_Type })-%> 
       
            <!--********** Content body start **********-->
     
        <div class="content-body">
            
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                       <div class="card ">
                            <div class="card-header">
                               <h3 class="card-title"><%= language.Expence_Category_Type_List %> </h3>
                                <button class="btn btn-rounded btn-primary  <%= accessdata.roll.expense.includes('write') ?'':'d-none' %>" data-bs-toggle="modal" data-bs-target="#addexpcattype" ><span class="btn-icon-start text-primary"><i class="fa fa-plus color-info"></i></span><%= language.Add_Category_Type %> </button>         
                            </div>
                            <div class="card-body ">
                                <div class="table-responsive">
                                    <table id="example3" class="display table-responsive-lg">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th><%= language.Expence_Category_Type %> </th>
                                                <th class="<%= ismulty ? '': 'd-none' %>"><%= language.Store_Name %>  </th>
                                                <th class="<%= accessdata.roll.expense.includes('edit') || accessdata.roll.expense.includes('delete') ?'':'d-none' %>"><%= language.Action %> </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% type.forEach(function(data, i){ %>
                                                <tr>
                                                    <td><%= i + 1 %></td>
                                                    <td><%=data.type_name %></td>
                                                    <td class="<%= ismulty ? '': 'd-none' %>"><%=data.store %></td>
                                                    <td>
                                                        
                                                            <a href="#" class="btn btn-primary shadow sharp me-1  <%= accessdata.roll.expense.includes('edit') ?'':'d-none' %>" id="action"
                                                             data-bs-toggle="modal" data-bs-target="#editexpcattype"
                                                             data-name="<%=data.type_name %>"
                                                             data-id="<%=data.id %>">
                                                             <i class="fas fa-pencil-alt"></i></a>  
                                                             
                                                             <a href="/expense/deletcategorytype/<%= data.id%>" class="btn btn-danger shadow  sharp <%= accessdata.roll.expense.includes('delete') ?'':'d-none' %>"><i class="fa fa-trash"></i></a>
                                                    </td>
                                                </tr>
                                           <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            
                            
                            </div>
                       </div>
                    </div>
                </div>
            </div>


        </div>
      
            <!--********** Content body end **********-->

            <!-- Modal update -->
            <div class="modal fade" id="editexpcattype">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><%= language.Coustomer_Detail %> </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form action="" id="editexpcattype_form" method="post" class="need-validation">
                                
                                    <div class="row g-1 align-items-center">
                                        <div class="form-group">
                                            <label><strong><%= language.Type_Name %> </strong></label>
                                            <input type="text" class="form-control" id="name" name="name" required>
                                        </div>
                                    </div>
                               
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-sm btn-secondary"
                                        data-bs-dismiss="modal"><%= language.Cancel %> </button>
                                    <button type="submit" class="btn btn-sm  btn-primary"><%= language.Save %> </button>
                                </div>
                            </form>


                        </div>
                        
                    </div>
                </div>
            </div>

            <!-- Modal add -->
            <div class="modal fade" id="addexpcattype">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><%= language.Add_Expence_Category_Type %> </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/expense/addcategorytype" method="post" class="need-validation">
                                
                                    <div class="col-md-12 mb-1 <%= ismulty ? '': 'd-none' %>">
                                        <div class="form-group">
                                            <label class="form-label"><strong> <%= language.Store_List %> </strong><span class="text-danger">*</span></label>
                                            <select class="default-select form-control wide mb-3" name="storeid"
                                                id="coupon_storlist_update" >
                                                <option value="" selected disabled > Select Store </option>
                                                <% storeList.forEach(function(x){ %>
                                                    <option value="<%= x.id %>"><%= x.name %></option>
                                                <% }) %>
                                                
                                                
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row g-1 align-items-center">
                                        <div class="form-group">
                                            <label><strong><%= language.Type_Name %> </strong></label>
                                            <input type="text" class="form-control " name="name" required>
                                        </div>
                                        
                                    </div>
                               
                                <div class="modal-footer">
                                   
                                    <button type="submit" class="btn btn-sm  btn-primary"><%= language.Save %> </button>
                                </div>
                            </form>


                        </div>
                        
                    </div>
            </div>


            </div>
        <!--**********************************
            Footer start
        ***********************************-->
        <div class="footer">
            <div class="copyright">
                <p><%= language.Copyright %> Â© <%= language.Designed %> &amp; <%= language.Developed_by %> <a href="#" target="_blank">KMS</a> 2023</p>
            </div>
        </div>
        <!--**********************************
            Footer end
        ***********************************-->

    </div>

        <!--********** Main wrapper end **********-->
        <%- include('templet/script')-%>

</body>

</html>